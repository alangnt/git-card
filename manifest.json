{
  "manifest_version": 3,
  "name": "GitPortal Card Creator",
  "version": "1.0",
  "description": "Create GitPortal cards from public GitHub repos",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://github.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["content.js"]
    }
  ]
}
